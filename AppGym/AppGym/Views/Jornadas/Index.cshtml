@model IEnumerable<AppGym.Models.Jornadas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["nameHeader"] = "Todas las jornadas";
    ViewData["head"] = true;
}

<div class="bg-primary text-white text-center" style="padding:5px 0;margin:2px 10px;">
    <a asp-action="Create" class="text-white">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Cantidad dias
            </th>
            <th>
                Nombre de dias
            </th>
            <th colspan="3">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreJornada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasJornada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDias)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdJornada">Edit</a> |
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdJornada">Details</a> |
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdJornada">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
