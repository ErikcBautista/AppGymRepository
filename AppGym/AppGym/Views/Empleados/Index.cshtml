@model IEnumerable<AppGym.Models.Empleados>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["nameHeader"] = "Todos los empleados";
    ViewData["head"] = true;
}

<div class="bg-primary text-white text-center" style="padding:5px 0;margin:2px 10px;">
    <a asp-action="Create" class="text-white">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre(s)
            </th>
            <th>
                Apellido(s)
            </th>
            <th>
                Teledono
            </th>
            <th>
                Nombre de usuario
            </th>
            <th>
                Jornada
            </th>
            <th colspan="3">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombresEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidosEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSesionEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdJornadaEmpleadoNavigation.NombreJornada)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEmpleado">Edit</a> |
             </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdEmpleado">Details</a> |
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdEmpleado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
