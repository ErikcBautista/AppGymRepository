@model IEnumerable<AppGym.Models.Empleados>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombresEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidosEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonoEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreSesionEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdJornadaEmpleadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombresEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidosEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSesionEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdJornadaEmpleadoNavigation.NombreDias)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEmpleado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEmpleado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEmpleado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
